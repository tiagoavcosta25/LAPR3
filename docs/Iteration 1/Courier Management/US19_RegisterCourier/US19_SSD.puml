@startuml
autonumber
actor "Administrative" as ADM

activate ADM
ADM -> ":System" : register courier
activate ":System"
":System" --> ADM : asks for the data that features the courier (i.e., name, \ne-mail, NIF, bank account (IBAN))
deactivate ":System"


ADM -> ":System" : inserts the required data
activate ":System"
":System" --> ADM : presents the data and asks for a confirmation
deactivate ":System"

ADM -> ":System" : confirms
activate ":System"
":System" --> ADM : operation succeeded
deactivate ":System"

deactivate ADM
@enduml
